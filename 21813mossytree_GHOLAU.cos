*tree timer script
scrp 2 4 21813 9

	tick 0
	gsub grow
	gsub live
	gsub seed
	gsub die

** grow
	subr grow
		setv va00 pose
		reps 7
			wait 600
			addv va00 1
			pose va00

		repe
	retn

** live
	subr live
		loop
			doif ov10 ne 100
				setv va01 ov10
				subv va01 1
				setv ov10 va01
			endi
			wait 1
		untl ov10 = 100
	retn

** produce seeds
	subr seed

		setv va10 posx
		setv va11 posy

** produce 1 or 3 seeds at a time	
		reps rand 1 3

** seeds spawned by the tree	
			new: simp 2 3 21813 "gp_mossytree_JESS" 1 rand 9 10 1000

			attr 195
			bhvr 48
			elas 0.5
			aero 2
			accg 0.2
			perm 100

			mvsf va10 va11
			velo rand -10 10 rand -10 0

			tick 1200

			targ ownr
		repe
		wait 6000
	retn

** die
	subr die
		pose 8
		wait rand 40 80
		kill ownr
	retn
endm


